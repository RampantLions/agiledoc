<?xml version="1.0" encoding="UTF-8"?>
<project>
	<projectName>Tic Tac Toe</projectName>
	<projectDomain>tictactoe</projectDomain>
	<projectDescription>&lt;b&gt;Tic-tac-toe&lt;/b&gt;, also spelled
		&lt;b&gt;tick tack toe&lt;/b&gt;, or &lt;b&gt;noughts and
		crosses&lt;/b&gt; as it is known in the UK, Ireland, Australia, New
		Zealand, is a pencil-and-paper game for two players,
		&lt;b&gt;O&lt;/b&gt; and &lt;b&gt;X&lt;/b&gt;, who take turns marking
		the spaces in a 3ï¿½3 grid, usually &lt;b&gt;X&lt;/b&gt; going first.
		The player who succeeds in placing three respective marks in a
		horizontal, vertical, or diagonal row wins the game.
	</projectDescription>
	<projectComponents>
		<projectComponent componentName="Authentication"
			componentPath="authentication/client">
			<entries>
				<entry featureType="">
					<className>Login</className>
					<classPath>authentication/client</classPath>
					<featurePath></featurePath>
					<featureName>Login</featureName>
					<featureDescription>Form to identify the name and the password of
						the player.</featureDescription>
					<methods />
					<comments />
				</entry>
				<entry featureType="">
					<className>Logout</className>
					<classPath>authentication/client</classPath>
					<featurePath></featurePath>
					<featureName>Logout</featureName>
					<featureDescription>Link to a safe exit from the game.
					</featureDescription>
					<methods />
					<comments />
				</entry>
			</entries>
		</projectComponent>
		<projectComponent componentName="Gaming"
			componentPath="client">
			<entries>
				<entry featureType="">
					<className>Player</className>
					<classPath>client</classPath>
					<featurePath></featurePath>
					<featureName>Player</featureName>
					<featureDescription>Information about each player of the game.
					</featureDescription>
					<methods />
					<comments />
				</entry>
				<entry featureType="">
					<className>TicTacToe</className>
					<classPath>client</classPath>
					<featurePath></featurePath>
					<featureName>Tic Tac Toe</featureName>
					<featureDescription>Anchor class to init the system by the Google
						Web Toolkit (EntryPoint).</featureDescription>
					<methods>
						<method>
							<methodName>onModuleLoad</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments>
						<comment>
							<commentName>Fri Jan 21 17:30:01 PST 2011</commentName>
							<commentDescription>This is the first class that GWT loads when
								the system starts.</commentDescription>
						</comment>
					</comments>
				</entry>
				<entry featureType="Architecture">
					<className>CallToMovimentJudgment</className>
					<classPath>client/architecture</classPath>
					<featurePath>architecture</featurePath>
					<featureName>Call To Moviment Judgment</featureName>
					<featureDescription></featureDescription>
					<methods>
						<method>
							<methodName>checkForWinner</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="">
					<className>GameInitialization</className>
					<classPath>client/architecture</classPath>
					<featurePath>architecture</featurePath>
					<featureName>Game Initialization</featureName>
					<featureDescription>System preparation for the game initialization.
					</featureDescription>
					<methods />
					<comments />
				</entry>
				<entry featureType="Architecture">
					<className>GreetingService</className>
					<classPath>client/architecture</classPath>
					<featurePath>architecture</featurePath>
					<featureName>Greeting Service</featureName>
					<featureDescription>The client side stub for the RPC service.
					</featureDescription>
					<methods>
						<method>
							<methodName>checkForWinner</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="">
					<className>GreetingServiceAsync</className>
					<classPath>client/architecture</classPath>
					<featurePath>architecture</featurePath>
					<featureName>Greeting Service Async</featureName>
					<featureDescription>The async counterpart of
						&lt;code&gt;GreetingService&lt;/code&gt;.</featureDescription>
					<methods>
						<method>
							<methodName>checkForWinner</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="">
					<className>HelpInitialization</className>
					<classPath>client/architecture</classPath>
					<featurePath>architecture</featurePath>
					<featureName>Help Initialization</featureName>
					<featureDescription>Loading the contents of the help system.
					</featureDescription>
					<methods />
					<comments>
						<comment>
							<commentName>Fri Jan 21 17:18:09 PST 2011</commentName>
							<commentDescription>The system loads all the help content before
								any other thing.</commentDescription>
						</comment>
					</comments>
				</entry>
				<entry featureType="UserManual">
					<className>GameBoard</className>
					<classPath>client/userInterface</classPath>
					<featurePath>userInterface</featurePath>
					<featureName>Game Board</featureName>
					<featureDescription>The web page where the game is shown.
						Accommodates the game grid and also
						some options such as a restart button, help, game score, game status,
						...</featureDescription>
					<methods />
					<comments />
				</entry>
				<entry featureType="Feature">
					<className>GameGrid</className>
					<classPath>client/userInterface</classPath>
					<featurePath>userInterface</featurePath>
					<featureName>Game Grid</featureName>
					<featureDescription>3x3 grid of cells in which players enter a mark
						to indicate their desired
						move.</featureDescription>
					<methods>
						<method>
							<methodName>makeMove</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>formatGridCells</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="Feature">
					<className>PlayerMove</className>
					<classPath>client/userInterface</classPath>
					<featurePath>userInterface</featurePath>
					<featureName>Player Move</featureName>
					<featureDescription>Performs a move in the game.
					</featureDescription>
					<methods>
						<method>
							<methodName>makeMove</methodName>
							<methodDescription>When the player clicks in a cell, the game
								draws an O or a X on the game
								grid depending on which player's turn it is.</methodDescription>
						</method>
						<method>
							<methodName>cellIsEmpty</methodName>
							<methodDescription>The Player can select a cell only if it wasn't
								already selected.</methodDescription>
						</method>
						<method>
							<methodName>toggleCurrentPlayer</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="">
					<className>Timer</className>
					<classPath>client/userInterface</classPath>
					<featurePath>userInterface</featurePath>
					<featureName>Timer</featureName>
					<featureDescription>Counts the time passed since the current game
						started.</featureDescription>
					<methods />
					<comments />
				</entry>
				<entry featureType="Feature">
					<className>WinningSequence</className>
					<classPath>client/userInterface</classPath>
					<featurePath>userInterface</featurePath>
					<featureName>Winning Sequence</featureName>
					<featureDescription>If there is three consecutive marks in a
						horizontal, vertical, or diagonal
						series, the current Player wins the game, the system highlights the
						winning
						sequence and the game is over.</featureDescription>
					<methods>
						<method>
							<methodName>showWinner</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>showHelpHint</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
			</entries>
		</projectComponent>
		<projectComponent componentName="Infra Structure"
			componentPath="server">
			<entries>
				<entry featureType="">
					<className>GreetingServiceImpl</className>
					<classPath>server</classPath>
					<featurePath></featurePath>
					<featureName>Greeting Service Impl</featureName>
					<featureDescription>The server side implementation of the RPC
						service.</featureDescription>
					<methods>
						<method>
							<methodName>checkForWinner</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
				<entry featureType="">
					<className>MovimentJudgment</className>
					<classPath>server</classPath>
					<featurePath></featurePath>
					<featureName>Moviment Judgment</featureName>
					<featureDescription>Checks if the player movement ran a winning
						sequence or not.</featureDescription>
					<methods>
						<method>
							<methodName>checkForWinner</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>checkWinnerRow</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>checkWinnerColumn</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>checkWinnerDiagonalRight</methodName>
							<methodDescription></methodDescription>
						</method>
						<method>
							<methodName>checkWinnerDiagonalLeft</methodName>
							<methodDescription></methodDescription>
						</method>
					</methods>
					<comments />
				</entry>
			</entries>
		</projectComponent>
	</projectComponents>
</project>
