<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
<servlet>
		<servlet-name>repositoryClassLoader</servlet-name>
		<servlet-class>sourceagile.server.classRepository.RepositoryClassImplementation</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>repositoryClassLoader</servlet-name>
		<url-pattern>/sourceagile/repositoryClassLoader</url-pattern>
	</servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SourceAgile.html</welcome-file>
  </welcome-file-list>

</web-app>
